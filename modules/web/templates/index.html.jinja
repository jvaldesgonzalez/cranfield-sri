<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <!-- This script got from frontendfreecode.com -->

    <link
      href="http://netdna.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="{{ url_for('static',filename='css/main.css')}}"
      rel="stylesheet"
    />
    <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container-fluid m-0 bg-secondary">
      <div class="row">
        <div class="col-lg-12 card-margin">
          <div class="card search-form">
            <div class="card-body p-0">
              <form id="search-form">
                <div class="row">
                  <div class="col-12">
                    <div class="row no-gutters">
                      <div class="col-lg-11 col-md-10 col-sm-10 p-0">
                        <input
                          type="text"
													placeholder= "{{context.q if context.q else 'Enter search term'}}"
                          class="form-control"
                          id="search"
                          name="search"
                        />
                      </div>
                      <div class="col-lg-1 col-md-2 col-sm-2 p-0">
                        <button type="submit" class="btn btn-base">
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="feather feather-search"
                          >
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                          </svg>
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="card card-margin">
            <div class="card-body">
              <div class="row search-body">
                <div class="col-lg-12">
                  <div class="search-result">
                    <div class="result-header">
                      <div class="row">
                        <div class="col-lg-12">
                          <div class="records">
														Showing: <b> {{ context.amount }} </b> results for:
														<h6>"{{ context.q }}"</h6>
														Model: <b> {{context.model_used}} </b>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="result-body">
                      <div class="table-responsive">
                        <table class="table widget-26">
                          <tbody>
														{% for item in context.results %}
                            <tr>
                              <td>
                                  <h5 class="m-0">
																		{{item.title}}
                                  </h5>
																	<p>
																		{{item.text}}
																	</p>
                              </td>
                              <td>
                                <div class="widget-26-job-info">
																	<h6 class="type m-0">{{item.author}}</h6>
																	<h1></h1>
																	<p class="type m-0">{{item.bib}}</p>
                                </div>
                              </td>
                              <td>
                                <div class="widget-26-job-starred">
                                  <a href="#">
                                    <svg
                                      xmlns="http://www.w3.org/2000/svg"
                                      width="24"
                                      height="24"
                                      viewBox="0 0 24 24"
                                      fill="none"
                                      stroke="currentColor"
                                      stroke-width="2"
                                      stroke-linecap="round"
                                      stroke-linejoin="round"
                                      class="feather feather-star"
                                    >
                                      <polygon
                                        points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"
                                      ></polygon>
                                    </svg>
                                  </a>
                                </div>
                              </td>
                            </tr>
														{% endfor %}
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
